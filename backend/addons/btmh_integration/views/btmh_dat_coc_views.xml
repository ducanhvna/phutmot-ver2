<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for Dat Coc -->
    <record id="view_btmh_dat_coc_tree" model="ir.ui.view">
        <field name="name">btmh.dat_coc.tree</field>
        <field name="model">btmh.dat_coc</field>
        <field name="arch" type="xml">
            <tree string="Đặt Cọc BTMH" decoration-success="trang_thai_sync=='da_sync'" 
                  decoration-warning="trang_thai_sync=='cho_sync'" decoration-danger="trang_thai_sync=='loi'"
                  decoration-info="trang_thai_dat_coc=='da_coc'" decoration-muted="trang_thai_dat_coc=='da_nhan_hang'">
                <field name="ngay_dat"/>
                <field name="id_dat_coc"/>
                <field name="ma_hang"/>
                <field name="ten_hang"/>
                <field name="so_luong"/>
                <field name="tong_tien" sum="Total"/>
                <field name="ten_khach"/>
                <field name="trang_thai_dat_coc"/>
                <field name="trang_thai_sync"/>
                <field name="ngay_giao"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Dat Coc -->
    <record id="view_btmh_dat_coc_form" model="ir.ui.view">
        <field name="name">btmh.dat_coc.form</field>
        <field name="model">btmh.dat_coc</field>
        <field name="arch" type="xml">
            <form string="Đặt Cọc BTMH">
                <header>
                    <button name="action_sync_to_odoo" string="Đồng Bộ Lên Odoo" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('trang_thai_sync', '=', 'da_sync')]}"/>
                    <field name="trang_thai_dat_coc" widget="statusbar" statusbar_visible="da_coc,chua_nhan_hang,da_nhan_hang"/>
                    <field name="trang_thai_sync" widget="statusbar" statusbar_visible="nhap,cho_sync,da_sync"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_odoo_sale_order" class="oe_stat_button" icon="fa-shopping-cart"
                                attrs="{'invisible': [('don_hang_odoo_id', '=', False)]}">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Đơn Hàng</span>
                                <span class="o_stat_text">Odoo</span>
                            </div>
                        </button>
                    </div>
                    
                    <group>
                        <group name="deposit_info" string="Thông Tin Đặt Cọc">
                            <field name="id_dat_coc" readonly="1"/>
                            <field name="ma_kho"/>
                            <field name="ngay_dat"/>
                            <field name="ngay_giao"/>
                            <field name="trang_thai_dat_coc"/>
                        </group>
                        <group name="sync_info" string="Trạng Thái Đồng Bộ">
                            <field name="trang_thai_sync" readonly="1"/>
                            <field name="ngay_sync" readonly="1" attrs="{'invisible': [('ngay_sync', '=', False)]}"/>
                            <field name="loi_sync" readonly="1" attrs="{'invisible': [('loi_sync', '=', False)]}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Sản Phẩm" name="product_info">
                            <group>
                                <group name="product_basic">
                                    <field name="ma_hang"/>
                                    <field name="ten_hang"/>
                                    <field name="ma_mau"/>
                                    <field name="ma_chung_sp"/>
                                </group>
                                <group name="product_details">
                                    <field name="so_luong"/>
                                    <field name="ty_gia"/>
                                    <field name="tong_tien"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Khách Hàng" name="customer_info">
                            <group>
                                <group name="customer_basic">
                                    <field name="ma_khach"/>
                                    <field name="ten_khach"/>
                                    <field name="dien_thoai"/>
                                    <field name="cccd_cmnd"/>
                                </group>
                                <group name="customer_details">
                                    <field name="dia_chi"/>
                                    <field name="khach_hang_odoo_id" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Chi Tiết" name="details">
                            <group>
                                <field name="dien_giai"/>
                                <field name="id_dai_chi"/>
                                <field name="sub_id"/>
                            </group>
                        </page>
                        
                        <page string="Liên Kết Odoo" name="odoo_links">
                            <group>
                                <field name="don_hang_odoo_id" readonly="1"/>
                                <field name="hoa_don_dat_coc_odoo_id" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_btmh_dat_coc_search" model="ir.ui.view">
        <field name="name">btmh.dat_coc.search</field>
        <field name="model">btmh.dat_coc</field>
        <field name="arch" type="xml">
            <search string="Tìm Kiếm Đặt Cọc">
                <field name="id_dat_coc"/>
                <field name="ma_hang"/>
                <field name="ten_hang"/>
                <field name="ma_khach"/>
                <field name="ten_khach"/>
                <field name="dien_thoai"/>
                <separator/>
                <filter name="da_coc" string="Đã Cọc" domain="[('trang_thai_dat_coc', '=', 'da_coc')]"/>
                <filter name="chua_nhan_hang" string="Chưa Nhận Hàng" domain="[('trang_thai_dat_coc', '=', 'chua_nhan_hang')]"/>
                <filter name="da_nhan_hang" string="Đã Nhận Hàng" domain="[('trang_thai_dat_coc', '=', 'da_nhan_hang')]"/>
                <filter name="huy" string="Hủy" domain="[('trang_thai_dat_coc', '=', 'huy')]"/>
                <separator/>
                <filter name="chua_sync" string="Chưa Đồng Bộ" domain="[('trang_thai_sync', '!=', 'da_sync')]"/>
                <filter name="da_sync" string="Đã Đồng Bộ" domain="[('trang_thai_sync', '=', 'da_sync')]"/>
                <filter name="co_loi" string="Có Lỗi" domain="[('trang_thai_sync', '=', 'loi')]"/>
                <separator/>
                <filter name="today" string="Hôm Nay" domain="[('ngay_dat', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="this_week" string="Tuần Này" domain="[('ngay_dat', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter name="this_month" string="Tháng Này" domain="[('ngay_dat', '>=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_date" string="Ngày Đặt" context="{'group_by': 'ngay_dat'}"/>
                    <filter name="group_by_status_deposit" string="Trạng Thái Cọc" context="{'group_by': 'trang_thai_dat_coc'}"/>
                    <filter name="group_by_status_sync" string="Trạng Thái Sync" context="{'group_by': 'trang_thai_sync'}"/>
                    <filter name="group_by_customer" string="Khách Hàng" context="{'group_by': 'ma_khach'}"/>
                    <filter name="group_by_product" string="Sản Phẩm" context="{'group_by': 'ma_hang'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_btmh_dat_coc" model="ir.actions.act_window">
        <field name="name">Đặt Cọc BTMH</field>
        <field name="res_model">btmh.dat_coc</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_btmh_dat_coc_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo đơn đặt cọc từ BTMH
            </p>
            <p>
                Dữ liệu đặt cọc từ hệ thống BTMH POS sẽ được đồng bộ vào đây.
            </p>
        </field>
    </record>
</odoo>
