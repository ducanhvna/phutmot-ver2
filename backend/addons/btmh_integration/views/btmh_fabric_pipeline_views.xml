<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- BTMH Fabric Pipeline Tree View -->
        <record id="view_btmh_fabric_pipeline_tree" model="ir.ui.view">
            <field name="name">btmh.fabric.pipeline.tree</field>
            <field name="model">btmh.fabric.pipeline</field>
            <field name="arch" type="xml">
                <tree string="Fabric Pipelines" 
                      decoration-success="status == 'success'"
                      decoration-danger="status == 'failed'"
                      decoration-warning="status == 'running'"
                      decoration-muted="not active">
                    <field name="name"/>
                    <field name="pipeline_type"/>
                    <field name="status"/>
                    <field name="last_run_time"/>
                    <field name="next_run_time" optional="hide"/>
                    <field name="schedule_interval"/>
                    <field name="auto_schedule" widget="boolean_toggle"/>
                    <field name="successful_runs"/>
                    <field name="failed_runs"/>
                    <field name="records_processed" optional="hide"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>
        
        <!-- BTMH Fabric Pipeline Form View -->
        <record id="view_btmh_fabric_pipeline_form" model="ir.ui.view">
            <field name="name">btmh.fabric.pipeline.form</field>
            <field name="model">btmh.fabric.pipeline</field>
            <field name="arch" type="xml">
                <form string="Fabric Pipeline">
                    <header>
                        <button name="action_trigger_pipeline" 
                                type="object" 
                                string="Trigger Pipeline"
                                class="btn-primary"
                                attrs="{'invisible': [('status', '=', 'running')]}"/>
                        <field name="status" widget="statusbar" 
                               statusbar_visible="idle,running,success,failed"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        
                        <widget name="web_ribbon" title="Inactive" bg_color="bg-danger" 
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Pipeline Name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group name="basic_info">
                                <field name="pipeline_type"/>
                                <field name="fabric_pipeline_id"/>
                                <field name="fabric_workspace_id"/>
                                <field name="timeout_minutes"/>
                            </group>
                            <group name="scheduling">
                                <field name="auto_schedule"/>
                                <field name="schedule_interval" attrs="{'readonly': [('auto_schedule', '=', False)]}"/>
                                <field name="last_run_time" readonly="1"/>
                                <field name="next_run_time" attrs="{'invisible': [('auto_schedule', '=', False)]}"/>
                            </group>
                        </group>
                        
                        <notebook>
                            
                            <!-- Azure/Fabric Configuration -->
                            <page string="Azure Configuration" name="azure_config">
                                <group>
                                    <group name="azure_auth">
                                        <field name="fabric_tenant_id" password="True"/>
                                        <field name="fabric_client_id"/>
                                        <field name="fabric_client_secret" password="True"/>
                                        <field name="fabric_base_url"/>
                                    </group>
                                    <group name="pipeline_params">
                                        <field name="pipeline_parameters" widget="ace" options="{'mode': 'json'}" 
                                               placeholder='{"param1": "value1", "param2": "value2"}'/>
                                    </group>
                                </group>
                            </page>
                            
                            <!-- Execution Status -->
                            <page string="Execution Status" name="execution_status">
                                <group>
                                    <group name="current_run">
                                        <field name="current_run_id" readonly="1"/>
                                        <field name="last_error_message" readonly="1" widget="text" 
                                               attrs="{'invisible': [('last_error_message', '=', False)]}"/>
                                    </group>
                                    <group name="statistics">
                                        <field name="total_runs" readonly="1"/>
                                        <field name="successful_runs" readonly="1"/>
                                        <field name="failed_runs" readonly="1"/>
                                        <field name="avg_duration_minutes" readonly="1"/>
                                    </group>
                                </group>
                                
                                <!-- Last Sync Results -->
                                <group string="Last Sync Results">
                                    <group>
                                        <field name="records_processed" readonly="1"/>
                                        <field name="records_synced" readonly="1"/>
                                        <field name="records_failed" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="last_sync_summary" widget="ace" options="{'mode': 'json'}" readonly="1"
                                               attrs="{'invisible': [('last_sync_summary', '=', False)]}"/>
                                    </group>
                                </group>
                            </page>
                            
                        </notebook>
                        
                    </sheet>
                    
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- BTMH Fabric Pipeline Kanban View -->
        <record id="view_btmh_fabric_pipeline_kanban" model="ir.ui.view">
            <field name="name">btmh.fabric.pipeline.kanban</field>
            <field name="model">btmh.fabric.pipeline</field>
            <field name="arch" type="xml">
                <kanban default_group_by="status" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="pipeline_type"/>
                    <field name="status"/>
                    <field name="last_run_time"/>
                    <field name="successful_runs"/>
                    <field name="failed_runs"/>
                    <field name="active"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    
                                    <div class="o_kanban_record_top mb-2">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_manage_button_section">
                                            <a class="o_kanban_manage_toggle_button" href="#">
                                                <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                            </a>
                                        </div>
                                    </div>
                                    
                                    <div class="o_kanban_record_body">
                                        <div class="row">
                                            <div class="col-6">
                                                <span class="badge badge-pill badge-info">
                                                    <field name="pipeline_type"/>
                                                </span>
                                            </div>
                                            <div class="col-6 text-right">
                                                <t t-if="record.active.raw_value">
                                                    <span class="badge badge-success">Active</span>
                                                </t>
                                                <t t-else="">
                                                    <span class="badge badge-secondary">Inactive</span>
                                                </t>
                                            </div>
                                        </div>
                                        
                                        <div class="mt-2">
                                            <i class="fa fa-check text-success"/> <field name="successful_runs"/> success
                                            <br/>
                                            <i class="fa fa-times text-danger"/> <field name="failed_runs"/> failed
                                        </div>
                                        
                                        <t t-if="record.last_run_time.raw_value">
                                            <div class="text-muted mt-1">
                                                Last run: <field name="last_run_time"/>
                                            </div>
                                        </t>
                                    </div>
                                    
                                    <div class="o_kanban_manage_button_section o_kanban_manage_view">
                                        <button name="action_trigger_pipeline" type="object" 
                                                class="btn btn-primary btn-sm"
                                                t-if="record.status.raw_value != 'running'">
                                            <i class="fa fa-play"/> Trigger
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- BTMH Fabric Pipeline Search View -->
        <record id="view_btmh_fabric_pipeline_search" model="ir.ui.view">
            <field name="name">btmh.fabric.pipeline.search</field>
            <field name="model">btmh.fabric.pipeline</field>
            <field name="arch" type="xml">
                <search string="Search Fabric Pipelines">
                    <field name="name" string="Pipeline Name"/>
                    <field name="pipeline_type"/>
                    <field name="fabric_pipeline_id"/>
                    
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    
                    <separator/>
                    <filter string="Auto Scheduled" name="auto_scheduled" domain="[('auto_schedule', '=', True)]"/>
                    <filter string="Manual Only" name="manual_only" domain="[('auto_schedule', '=', False)]"/>
                    
                    <separator/>
                    <filter string="Running" name="running" domain="[('status', '=', 'running')]"/>
                    <filter string="Success" name="success" domain="[('status', '=', 'success')]"/>
                    <filter string="Failed" name="failed" domain="[('status', '=', 'failed')]"/>
                    
                    <separator/>
                    <filter string="Sales Pipelines" name="sales" domain="[('pipeline_type', '=', 'sales')]"/>
                    <filter string="Payment Pipelines" name="payments" domain="[('pipeline_type', '=', 'payments')]"/>
                    <filter string="Deposit Pipelines" name="deposits" domain="[('pipeline_type', '=', 'deposits')]"/>
                    <filter string="Balance Pipelines" name="balance" domain="[('pipeline_type', '=', 'balance')]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                        <filter string="Pipeline Type" name="group_type" context="{'group_by': 'pipeline_type'}"/>
                        <filter string="Schedule Interval" name="group_schedule" context="{'group_by': 'schedule_interval'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- BTMH Fabric Pipeline Action -->
        <record id="action_btmh_fabric_pipeline" model="ir.actions.act_window">
            <field name="name">Fabric Pipelines</field>
            <field name="res_model">btmh.fabric.pipeline</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_btmh_fabric_pipeline_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Fabric Pipeline!
                </p>
                <p>
                    Fabric Pipelines allow you to manage and trigger Microsoft Fabric data flows
                    to sync data from BTMH POS system to Odoo.
                </p>
                <p>
                    You can set up automatic scheduling or trigger pipelines manually as needed.
                </p>
            </field>
        </record>
        
    </data>
</odoo>
