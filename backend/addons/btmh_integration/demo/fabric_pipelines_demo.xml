<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Demo Fabric Pipeline: Sales Data -->
        <record id="fabric_pipeline_sales" model="btmh.fabric.pipeline">
            <field name="name">BTMH Sales Data Pipeline</field>
            <field name="fabric_pipeline_id">your-fabric-sales-pipeline-id</field>
            <field name="fabric_workspace_id">your-fabric-workspace-id</field>
            <field name="pipeline_type">sales</field>
            <field name="fabric_tenant_id">your-azure-tenant-id</field>
            <field name="fabric_client_id">your-azure-client-id</field>
            <field name="fabric_client_secret">your-azure-client-secret</field>
            <field name="pipeline_parameters">{"table_name": "btmh_sales_staging", "batch_size": 1000}</field>
            <field name="timeout_minutes">30</field>
            <field name="auto_schedule">True</field>
            <field name="schedule_interval">15min</field>
            <field name="active">True</field>
        </record>
        
        <!-- Demo Fabric Pipeline: Payments Data -->
        <record id="fabric_pipeline_payments" model="btmh.fabric.pipeline">
            <field name="name">BTMH Payments Data Pipeline</field>
            <field name="fabric_pipeline_id">your-fabric-payments-pipeline-id</field>
            <field name="fabric_workspace_id">your-fabric-workspace-id</field>
            <field name="pipeline_type">payments</field>
            <field name="fabric_tenant_id">your-azure-tenant-id</field>
            <field name="fabric_client_id">your-azure-client-id</field>
            <field name="fabric_client_secret">your-azure-client-secret</field>
            <field name="pipeline_parameters">{"table_name": "btmh_payments_staging", "batch_size": 500}</field>
            <field name="timeout_minutes">25</field>
            <field name="auto_schedule">True</field>
            <field name="schedule_interval">15min</field>
            <field name="active">True</field>
        </record>
        
        <!-- Demo Fabric Pipeline: Deposits Data -->
        <record id="fabric_pipeline_deposits" model="btmh.fabric.pipeline">
            <field name="name">BTMH Deposits Data Pipeline</field>
            <field name="fabric_pipeline_id">your-fabric-deposits-pipeline-id</field>
            <field name="fabric_workspace_id">your-fabric-workspace-id</field>
            <field name="pipeline_type">deposits</field>
            <field name="fabric_tenant_id">your-azure-tenant-id</field>
            <field name="fabric_client_id">your-azure-client-id</field>
            <field name="fabric_client_secret">your-azure-client-secret</field>
            <field name="pipeline_parameters">{"table_name": "btmh_deposits_staging", "batch_size": 200}</field>
            <field name="timeout_minutes">20</field>
            <field name="auto_schedule">True</field>
            <field name="schedule_interval">30min</field>
            <field name="active">True</field>
        </record>
        
        <!-- Demo Fabric Pipeline: Daily Balance -->
        <record id="fabric_pipeline_balance" model="btmh.fabric.pipeline">
            <field name="name">BTMH Daily Balance Pipeline</field>
            <field name="fabric_pipeline_id">your-fabric-balance-pipeline-id</field>
            <field name="fabric_workspace_id">your-fabric-workspace-id</field>
            <field name="pipeline_type">balance</field>
            <field name="fabric_tenant_id">your-azure-tenant-id</field>
            <field name="fabric_client_id">your-azure-client-id</field>
            <field name="fabric_client_secret">your-azure-client-secret</field>
            <field name="pipeline_parameters">{"table_name": "btmh_balance_staging", "include_yesterday": true}</field>
            <field name="timeout_minutes">15</field>
            <field name="auto_schedule">True</field>
            <field name="schedule_interval">daily</field>
            <field name="active">True</field>
        </record>
        
        <!-- Demo Fabric Pipeline: Full Sync (Manual) -->
        <record id="fabric_pipeline_full_sync" model="btmh.fabric.pipeline">
            <field name="name">BTMH Full Data Sync Pipeline</field>
            <field name="fabric_pipeline_id">your-fabric-fullsync-pipeline-id</field>
            <field name="fabric_workspace_id">your-fabric-workspace-id</field>
            <field name="pipeline_type">full_sync</field>
            <field name="fabric_tenant_id">your-azure-tenant-id</field>
            <field name="fabric_client_id">your-azure-client-id</field>
            <field name="fabric_client_secret">your-azure-client-secret</field>
            <field name="pipeline_parameters">{"full_reload": true, "truncate_staging": true}</field>
            <field name="timeout_minutes">60</field>
            <field name="auto_schedule">False</field>
            <field name="schedule_interval">manual</field>
            <field name="active">True</field>
        </record>
        
    </data>
</odoo>
