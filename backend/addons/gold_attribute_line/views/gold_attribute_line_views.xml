<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_gold_attribute_line_form" model="ir.ui.view">
        <field name="name">gold.attribute.line.form</field>
        <field name="model">gold.attribute.line</field>
        <field name="arch" type="xml">
            <form string="Thuộc tính vàng">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="display_name"/>
                        <field name="short_name"/>
                        <field name="field_type"/>
                        <field name="unit"/>
                        <field name="required"/>
                        <field name="editable"/>
                        <field name="active"/>
                        <field name="default_value"/>
                        <field name="validation_regex"/>
                        <field name="selection_options"/>
                        <field name="category"/>
                        <field name="group_id"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_gold_attribute_line_tree" model="ir.ui.view">
        <field name="name">gold.attribute.line.tree</field>
        <field name="model">gold.attribute.line</field>
        <field name="arch" type="xml">
            <tree string="Danh sách thuộc tính vàng">
                <field name="name"/>
                <field name="display_name"/>
                <field name="field_type"/>
                <field name="unit"/>
                <field name="required"/>
                <field name="editable"/>
                <field name="active"/>
                <field name="group_id"/>
            </tree>
        </field>
    </record>

    <record id="action_gold_attribute_line" model="ir.actions.act_window">
        <field name="name">Thuộc tính vàng</field>
        <field name="res_model">gold.attribute.line</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- <menuitem id="menu_gold_attribute_line" name="Thuộc tính vàng"
              parent="menu_gold_attribute_root" action="action_gold_attribute_line"/> -->
</odoo>
