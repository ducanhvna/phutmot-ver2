<odoo>
    <!-- Form View -->
    <record id="view_attribute_group_form" model="ir.ui.view">
        <field name="name">product.template.attribute.group.form</field>
        <field name="model">product.template.attribute.group</field>
        <field name="arch" type="xml">
            <form string="Nhóm thuộc tính mã mẫu">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="sequence"/>
                    </group>
                    <!-- <notebook>
                        <page string="Thuộc tính vàng">
                            <field name="gold_attribute_line_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="display_name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook> -->
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_attribute_group_tree" model="ir.ui.view">
        <field name="name">product.template.attribute.group.tree</field>
        <field name="model">product.template.attribute.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_attribute_group" model="ir.actions.act_window">
        <field name="name">Nhóm thuộc tính mã mẫu</field>
        <field name="res_model">product.template.attribute.group</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_attribute_group"
              name="Nhóm thuộc tính mã mẫu"
              parent="menu_gold_attribute_root"
              action="action_attribute_group"/>
</odoo>
